{
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile"],
  "dockerfile": {
    "enabled": true,
    "fileMatch": ["^Dockerfile$"],
    "groupName": "docker",
    "pinDigests": true,
    "separatePatchReleases": true,
    "separateMajorReleases": true,
    "ignoreDeps": ["node:18-alpine"]
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}

