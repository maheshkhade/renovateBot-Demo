{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile"
  ],
  "dockerfile": {
    "enabled": true,
    "fileMatch": [
      "^Dockerfile$"
    ],
    "groupName": "docker",
    "pinDigests": true,
    "versioning": "regex:^18\\.",
    "separateMajorReleases": true,
    "ignoreDeps": [
      "node:18-alpine"
    ]
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
